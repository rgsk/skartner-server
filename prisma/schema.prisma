// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String  @id @default(uuid())
  title       String
  body        String
  isPublished Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Posts")
}
